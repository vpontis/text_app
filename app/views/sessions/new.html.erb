<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <div class="actions">
        <%= f.submit "Sign in", class: "btn  btn-large btn-primary submit-btn" %>
      </div>
      
    <% end %>
    <%= link_to "No account, register one!", signup_path, class: "center" %>
  </div>
</div>